{
  "name": "7dmap",
  "version": "0.0.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "nodemon --exec electron . --watch ./ --ext .js,.html,.vue,.css",
    "elec-build": "electron-builder"
  },
  "dependencies": {
    "pinia": "^2.1.7",
    "sharp": "^0.33.1",
    "vue": "^3.3.11"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.5.2",
    "electron": "^28.1.2",
    "electron-builder": "^24.9.1",
    "vite": "^5.0.10"
  },
  "build": {
    "appId": "com.zzy77.7dmap",
    "productName": "7dmap",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "public/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extraFiles": [
      {
        "from": "src/res",
        "to": "res",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "src/assets/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
